<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karl.labquiz.MainActivity">


    <TextView
        android:id="@+id/EtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="187dp"
        android:text="Username"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/EtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_alignBottom="@+id/Password"
        android:layout_alignRight="@+id/EtUser"
        android:layout_alignEnd="@+id/EtUser" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/User"
        android:layout_alignLeft="@+id/User"
        android:layout_alignStart="@+id/User" />

    <EditText
        android:id="@+id/User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="23dp"
        android:layout_alignBottom="@+id/EtUser"
        android:layout_toRightOf="@+id/EtUser"
        android:layout_toEndOf="@+id/EtUser"
        android:layout_marginStart="23dp" />

    <Button
        android:id="@+id/btn_rem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:layout_alignBaseline="@+id/btn_log"
        android:layout_alignBottom="@+id/btn_log"
        android:layout_alignLeft="@+id/EtUser"
        android:layout_alignStart="@+id/EtUser" />

    <Button
        android:id="@+id/btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogIn"
        android:onClick="login"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/Password"
        android:layout_alignRight="@+id/Password"
        android:layout_alignEnd="@+id/Password" />

</RelativeLayout>
